{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/C",
        "${workspaceFolder}/scripts/clean.bat",
        "${workspaceFolder}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Shaders",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/C",
        "for %f in (${workspaceFolder}\\shaders\\*.glsl) do glslangValidator -G %f -o ${workspaceFolder}/build/%~nf.spv"
      ],
      "dependsOn": ["Clean"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Convert Shaders to Header",
      "type": "shell",
      "command": "py",
      "args": [
        "${workspaceFolder}/scripts/binToHeader.py",
        "build/*.spv",
        "-o",
        "./include/shaders.h"
      ],
      "dependsOn": ["Build Shaders"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/C",
        "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\" &&",
        "cl",
        "/Zi",
        "/EHsc",
        "/MDd",
        "/I", "D:/ThirdPartyLibraries/Include", 
        "/I", "./include",
        "src/*.cpp", "src/*.c",
        "/Fobuild/obj/",
        "/link",
        "/LIBPATH:D:/ThirdPartyLibraries/Lib",
        "glfw3.lib", "opengl32.lib", "user32.lib", "gdi32.lib", "shell32.lib",
        "/OUT:./build/lavalamp.exe"
      ],
      "dependsOn": ["Clean", "Convert Shaders to Header"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
